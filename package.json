{
  "name": "mcrud",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "nyc mocha --exit"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "jade": "~1.11.0",
    "mongoose": "^5.7.5",
    "morgan": "~1.6.1",
    "serve-favicon": "~2.3.0",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "nyc": "^12.0.2",
    "sinon": "^5.0.10"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 100,
    "branches": 80,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "ignore-class-method": "methodToIgnore",
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true,
    "report-dir": "./coverage-reports"
  }
}
